<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="ButtonsQuizTheme" parent="@android:style/Widget.ActionButton">
        <item name="android:background">@drawable/btn_style</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="EditTextsQuizTheme" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/edittext_style</item>
        <item name="android:minHeight">45dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">#18639e</item>
    </style>

    <style name="RadioButtonsQuizTheme" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/radio_btn_style</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:paddingLeft">3dp</item>
    </style>
    
    <style name="ActionBarsQuizTheme" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:background">@drawable/bg4</item>
        <item name="android:titleTextStyle">@style/ActionBarTextStyle</item>
    </style>
    
    <style name="ActionBarTextStyle" parent="@android:style/TextAppearance">
        <item name="android:textColor">#ffffffff</item>
    </style>
    
    <style name="ListViewStyle" parent="@android:style/Widget.ListView.White">
        <item name="android:textStyle">@style/ActionBarTextStyle</item>
    </style>
    
    <style name="TextViewStyle" parent="@android:style/Widget.TextView" >
        <item name="android:textColor">#ffffffff</item>
    </style>

</resources>