<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape
            android:shape="oval"
            android:thickness="0dp" >
            <size
                android:height="25dp"
                android:width="25dp" />

            <solid android:color="#FFFFFF" />

            <stroke
                android:width="5dp"
                android:color="#C8C8C8" />
        </shape>
    </item>
    
    <item android:top="8dp" android:left="8dp" android:right="8dp" android:bottom="8dp">
        <shape android:shape="oval" >
            <size
                android:height="10dp"
                android:width="10dp" />

            <gradient 
                android:startColor="#003a67"
                android:endColor="#b5d1e7"
                android:type="linear"
                android:angle="270"/>
        </shape>
    </item>

</layer-list>